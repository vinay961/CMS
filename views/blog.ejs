<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Billing</title>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">
    <div class="card">
      <div class="card-header bg-danger text-white">
        <strong>Note:</strong> At the moment only COD method is available
      </div>
      <div class="card-body">
        <form action="" method="post">
          <fieldset class="mb-3">
            <legend class="col-form-label">Select Payment Method</legend>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="billMode" id="billMode1" value="option1" checked>
              <label class="form-check-label" for="billMode1">
                COD (Cash on delivery)
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="billMode" id="billMode2" value="option2" disabled>
              <label class="form-check-label" for="billMode2">
                UPI
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="billMode" id="billMode3" value="option3" disabled>
              <label class="form-check-label" for="billMode3">
                Debit/Credit Card
              </label>
            </div>
          </fieldset>
          <div class="form-group mt-3">
            <label for="customerName">Date</label>
            <input type="date" class="form-control" id="customerName" name="date" placeholder="DD/MM/YYYY" required>
          </div>
          <div class="form-group mt-3">
            <label for="address">Delivery Address</label>
            <textarea class="form-control" id="address" rows="3" name="address" placeholder="Enter your delivery address"
              required></textarea>
          </div>
          <div class="form-group mt-3">
            <label for="contactNumber">Contact Number</label>
            <input type="tel" class="form-control" id="contactNumber" name="contactNum" placeholder="Enter your contact number" required>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Confirm Service</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>

</html>
